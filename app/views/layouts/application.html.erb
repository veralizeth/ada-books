<!DOCTYPE html>
<html>
  <head>
    <title>AdaBooks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <h1>Welcome to Ada Books</h1>
  </header>
  <body>
  <header>
    <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "New Book", new_book_path %></li>
      <li><%= link_to "New Author", new_author_path  %></li>
      <li><%= link_to "Authors", authors_path %></li>
      <% if session[:user_id] %>
        <li><%= link_to "Logout", logout_path, method: :post %></li>
      <% else %>
        <li><%= link_to "log in", login_path  %></li>
      <%end%>

    </ul>
    </nav>
    <section class="flash">
      <% flash.each do |name, message|%>
        <div class="<%= name %>">
          <%= message %>
        </div>
      <% end %>
    
    </section>
  </header>
    <%= yield %>
  </body>
  <footer>
    <p>Copyright Ada C13 2020</p>
  </footer>
</html>
